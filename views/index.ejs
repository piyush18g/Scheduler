  <div class="window add-scd">
    <div class="title-bar">
      <div class="title-bar-text">
        Add new schedule
      </div>
      <div class="title-bar-controls">
        <a href="/view">
          <button aria-label="Close"></button>
        </a>
      </div>
    </div>
    <div class="window-body" style="padding:10px">
      <form action="/submit" method="POST">

        <div class="field-row-stacked" style="max-width: 200px">
          <label for="title">Title:</label>
          <input type="text" name="title" id="title" required />
        </div>
        <br/>
        <div class="field-row-stacked" >
          <label for="desc">Description:</label>
          <textarea name="desc" id="desc" rows="8"></textarea>
        </div>
        <br/>
        <br/>
        <input class="down-centre" type="submit" value="Add">
      </form>
      
      <a class="down-centre" href="/view">
        <button type="button">View Schedule</button>
      </a>
    </div>
